<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-list"></span>&nbsp;<%=t "layouts.header.menu.data" %> <span class="caret"></span></a>

  <ul class="dropdown-menu">

    <li><%= link_to individuals_path, class: "individuals_table_link" do %>
      <span class="fa fa-user"></span>&nbsp;<%= t("individuals.index.navbar") %>
      <% end %>
    </li>
    <li><%= link_to clubs_path, class: "clubs_table_link" do %>
      <span class="fa fa-flag"></span>&nbsp;<%= t("clubs.index.navbar") %>
      <% end %>
    </li>
    <li><%= link_to individual_devices_path, class: "individual_devices_table_link" do %>
      <span class="fa fa-tty"></span>&nbsp;<%= t("individual_devices.index.navbar") %>
      <% end %>
    </li>
    <li><%= link_to club_devices_path, class: "club_devices_table_link" do %>
      <span class="fa fa-satellite-dish"></span>&nbsp;<%= t("club_devices.index.navbar") %>
      <% end %>
    </li>

  </ul>
</li>

<% unless "#{locale}" == "en" %>
  <li>
    <%= link_to image_tag('en.png', alt: 'EN', class: "img img-thumbnail", width: 28), { locale: :en } %>
  </li>
<% end %>
<% unless "#{locale}" == "pl" %>
  <li>
    <%= link_to image_tag('pl.png', alt: 'PL', class: "img img-thumbnail", width: 28), { locale: :pl } %>
  </li>
<% end %>
